// File Location: /firestore.rules
// These rules have been updated to use the user's UID for multi-tenancy,
// which is compatible with the standard Firebase Authentication in your new UI.

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // This rule allows a logged-in user to read and write documents
    // ONLY within their own subcollection inside the 'tenants' collection.
    // The {userId} wildcard must match the UID of the authenticated user.
    // This is the standard and secure way to handle multi-tenancy with Firebase Auth.
    match /tenants/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
